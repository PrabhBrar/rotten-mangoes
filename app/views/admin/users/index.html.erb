<section class="article-body">
  <hr>

  <table class="table-minimal">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Active Since</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <% if !user.is_admin? %>
            <td><%= link_to button_tag("Edit"), edit_admin_user_path(user.id) %></td>
            <td><%= link_to button_tag("Delete"), admin_user_path(user.id), method: :delete, data: { confirm: "You sure?" } %></td>
          <% else %>
            <td>Can't Edit Admin</td>
            <td>Can't Delete Admin</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</section> 
<div class='new-admin-user'>
  <%= link_to button_tag("Submit New User"), new_admin_user_path %>
</div>
<section class="pagination">
  <%= will_paginate @users %>
</section>