<section class="article-body">

  <div class="search-form">
  <%= form_tag movies_path, method: :get do -%>
    <div class="search-form-element">
      <%= label_tag :keyword %>
      <%= text_field_tag :keyword %>
    </div>
    <div class="search-form-element">
      <%= label_tag :duration %>
      <%= select_tag :duration, options_for_select([ "Under 90 minutes", "Between 90 and 120 minutes", "Over 120 minutes" ] ), { :prompt => 'Select duration' } %>
    </div>
    <div class="search-form-submit">
      <%= button_tag("Search") %>
    </div>
  <% end -%>
  </div>
  <% @movies.each do |movie| %>
    <% @movie = movie %>
    <%= render 'movie' %>
  <% end %>
  <div class='new-movie'>
    <%= link_to button_tag("Submit New Movie"), new_movie_path %>
  </div>
</section> 
