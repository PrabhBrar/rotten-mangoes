<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src="https://logopond.com/logos/20cf133449bd1220c6c502bb308fe1da.png" alt="Logo Image">
    </a>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><%= link_to "Rotten Mangoes", movies_path %></li>
        <li class="nav-link"><a href="javascript:void(0)">About Us</a></li>
        <li class="nav-link"><a href="javascript:void(0)">Contact</a></li>
      </ul>
    </nav>
    <div class="navigation-tools">
      <ul>
        <% if current_user %>
          <li class="logout">
            Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
          </li>
        <% else %>
          <li class="login">
            <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
          </li>
        <% end %>
        <% if admin? %>
          <li class="admin" >
            (<%= link_to "Admin Area", admin_users_path %>)
          </li>
        <% end %>
      </ul>
  </div>
</header>