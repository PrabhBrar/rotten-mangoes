<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src="https://logopond.com/logos/20cf133449bd1220c6c502bb308fe1da.png" alt="Logo Image">
    </a>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><%= link_to "Rotten Mangoes", movies_path %></li>
      </ul>
    </nav>
    <div class="login-control">
      <nav role="navigation">
        <ul id="js-navigation-menu" class="navigation-menu show">
          <% if current_user %>
            <li class="nav-link more"><a href="javascript:void(0)"><%= current_user.full_name %></a>
              <ul class="submenu">
                <% if admin? %>
                  <li>
                    <%= link_to "Admin Area", admin_users_path %>
                  </li>
                <% end %>
                <li>
                  <%= link_to "Log out", session_path("current"), method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-link more"><a href="javascript:void(0)">Menu</a>
              <ul class="submenu">
                <li>
                  <%= link_to "Log In", new_session_path %>
                </li>
                <li>
                  <%= link_to "Sign Up", new_user_path %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </nav>
       
    </div>
  </div>
</header>